{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% form_theme form 'SyliusWebBundle:Backend:forms.html.twig' %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import update %}

{% block topbar %}
    <ol class="breadcrumb">
        <li>{{ 'sylius.breadcrumb.assortment'|trans }}</li>
        <li><a href="{{ path('sylius_backend_product_attribute_index') }}">{{ 'product_part_type.breadcrumb.index'|trans }}</a></li>
        <li>{{ 'update'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="page-header">
        <h1><i class="glyphicon glyphicon-plus-sign"></i> {{ 'product_part_type.header.update'|trans }}</h1>
    </div>

    {{ form_errors(form) }}

    <form action="{{ path('furniture_backend_product_part_type_update', {id: product_part_type.id}) }}" method="post" class="form-horizontal" novalidate>
        {{ form_widget(form) }}

        {{ update() }}
    </form>
{% endblock %}
