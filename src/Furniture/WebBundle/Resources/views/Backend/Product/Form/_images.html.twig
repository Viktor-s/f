{% form_theme form 'SyliusWebBundle:Backend:forms.html.twig' %}

<div class="tab-pane" id="images">
    <div id="product-images" data-toggle="modal-gallery" data-target="#modal-gallery" class="collection-container" data-prototype="{{ form_widget(form.masterVariant.images.vars.prototype)|e }}">
        {% for imageForm in form.masterVariant.images %}
            {{ form_widget(imageForm) }}
        {% endfor %}
    </div>

    <hr>
    <a href="#" class="btn btn-primary btn-block" data-collection-button="add" data-prototype="product-images" data-collection="product-images">{{ 'sylius.variant.add_image'|trans }}</a>
</div>
