{% form_theme form 'SyliusWebBundle:Backend:filterForms.html.twig' %}

<form method="get" action="" class="form-inline form-filter">
    {{ form_row(form.name) }}
    {{ form_row(form.factory) }}
    {{ form_row(form.factoryCode) }}
    {{ form_row(form.priceFrom) }}
    {{ form_row(form.priceTo) }}

    <button type="submit" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i> {{ 'sylius.filter'|trans }}</button>
</form>

<script type="text/javascript">
    (function ($) {
        $(document).ready(function () {
            $('#criteria_factory').select2({
                allowClear: true
            });
        });
    })(jQuery);
</script>