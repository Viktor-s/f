{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% import 'SyliusResourceBundle:Macros:buttons.html.twig' as buttons %}
{% from 'SyliusWebBundle:Backend/Macros:misc.html.twig' import pagination %}
{% import 'SyliusWebBundle:Backend/Macros:alerts.html.twig' as alerts %}

{% block topbar %}
    <ol class="breadcrumb">
        <li>{{ 'sylius.breadcrumb.assortment'|trans }}</li>
        <li>{{ 'product_extension_option.header.index'|trans }}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="page-header">
        <div class="actions-menu">
            {{ buttons.manage(path('furniture_backend_product_extension'), 'product_extension.manage'|trans) }}
            {{ buttons.create(path('furniture_backend_product_extension_option_create'), 'product_extension_option.create'|trans) }}
        </div>
        <h1><i class="glyphicon glyphicon-list-alt"></i> {{ 'product_extension_option.header.index'|trans|raw }}</h1>
    </div>

    {{ pagination(product_extension_options) }}

    {% if product_extension_options|length > 0 %}
        <table class="table">
            <thead>
            <tr>
                <th>{{ sylius_resource_sort('name', 'product_extension_option.name'|trans) }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for product_extension_option in product_extension_options %}
                <tr id="{{ product_extension_option.id }}">
                    <td>{{ product_extension_option.name }}</td>
                    <td>
                        <div class="pull-right">
                            {{ buttons.edit(path('furniture_backend_product_extension_option_update', {'id': product_extension_option.id})) }}
                            {{ buttons.delete(path('furniture_backend_product_extension_option_delete', {'id': product_extension_option.id})) }}
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% else %}
        {{ alerts.info('product_extension_option.no_results'|trans) }}
    {% endif %}

    {{ pagination(product_extension_options) }}

{% endblock %}
