{% extends 'SyliusWebBundle:Backend:layout.html.twig' %}

{% block javascripts %}
{{ parent() }}
{% javascripts output=
    '@A2lixTranslationFormBundle/Resources/public/js/a2lix_translation_bootstrap.js'
%}
    <script type="text/javascript" src="{{ asset_url }}"></script>
{% endjavascripts %}
{% endblock %}

{% from 'SyliusResourceBundle:Macros:actions.html.twig' import create %}

{% block topbar %}
<ol class="breadcrumb">
    <li><a href="{{ path('furniture_backend_factory_index') }}">Factory</a></li>
    <li>Create new</li>
</ol>
{% endblock %}

{% block content %}
<div class="page-header">
    <h1><i class="glyphicon glyphicon-plus-sign"></i> Create</h1>
</div>

{{ form_errors(form) }}

<form action="{{ path('furniture_backend_factory_create') }}" method="post" class="form-horizontal" {{ form_enctype(form) }} novalidate>
    {% include 'SyliusWebBundle:Backend/Factory:_form.html.twig' %}
    {{ create() }}
</form>
{% endblock %}
