<div class="col-sm-4 information-entry">
    <h3 class="block-title inline-product-column-title">{{ 'sylius.newest'|trans }}</h3>
    {% for product in products %}
        <div class="inline-product-entry">
            <a href="{{ path(product) }}" class="image">
                <img class="thumbnail" src="{{ product.image ? product.image.path|imagine_filter('sylius_small') : '/img/50x40.png' }}" alt="{{ product.name }}" />
            </a>
            <div class="content">
                <div class="cell-view">
                    <a href="{{ path(product) }}" class="title">{{ product.name }}</a>
                    <div class="price">
                        <div class="prev">{{ sylius_calculate_price(product.masterVariant)|sylius_price }}</div>
                        {#<div class="current">$119,99</div>#}
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    {% endfor %}
</div>
