{% extends 'FrontendBundle::layout.html.twig' %}

{% block title %} {{ 'frontend.products'|trans }} :: {{ parent() }}{% endblock %}

{% block breadcrumb %}
    <a href="{{ path('homepage') }}">{{ 'frontend.title.homepage'|trans }}</a>
    <a href="#">{{ 'frontend.title.products' }}</a>
{% endblock %}

{% block content %}

    <div class="information-blocks">
        <div class="row">
            <div class="col-md-12 col-md-push-0 col-sm-8 col-sm-push-4">
                <div class="page-selector">
                    <div class="pages-box hidden-xs">
                        <a href="shop.html#" class="square-button active">1</a>
                        <a href="shop.html#" class="square-button">2</a>
                        <a href="shop.html#" class="square-button">3</a>
                        <div class="divider">...</div>
                        <a href="shop.html#" class="square-button"><i class="fa fa-angle-right"></i></a>
                    </div>
                    <div class="shop-grid-controls">
                        <div class="entry">
                            <div class="inline-text">Sorty by</div>
                            <div class="simple-drop-down">
                                <select>
                                    <option>Position</option>
                                    <option>Price</option>
                                    <option>Category</option>
                                    <option>Rating</option>
                                    <option>Color</option>
                                </select>
                            </div>
                            <div class="sort-button"></div>
                        </div>
                        <div class="entry">
                            <div class="view-button active grid"><i class="fa fa-th"></i></div>
                            <div class="view-button list"><i class="fa fa-list"></i></div>
                        </div>
                        <div class="entry">
                            <div class="inline-text">Show</div>
                            <div class="simple-drop-down" style="width: 75px;">
                                <select>
                                    <option>12</option>
                                    <option>20</option>
                                    <option>30</option>
                                    <option>40</option>
                                    <option>all</option>
                                </select>
                            </div>
                            <div class="inline-text">per page</div>
                        </div>
                    </div>
                    <div class="clear"></div>
                </div>
                <div class="row shop-grid grid-view">

                    <div class="col-md-3 col-sm-4 shop-grid-item">
                        <div class="product-slide-entry shift-image">
                            <div class="product-image">
                                <img src="img/product-minimal-2.jpg" alt="" />
                                <img src="img/product-minimal-11.jpg" alt="" />
                                <div class="bottom-line left-attached">
                                    <a class="bottom-line-a square"><i class="fa fa-shopping-cart"></i></a>
                                    <a class="bottom-line-a square"><i class="fa fa-heart"></i></a>
                                    <a class="bottom-line-a square"><i class="fa fa-retweet"></i></a>
                                    <a class="bottom-line-a square"><i class="fa fa-expand"></i></a>
                                </div>
                            </div>
                            <a class="tag" href="shop.html#">Men clothing</a>
                            <a class="title" href="shop.html#">Blue Pullover Batwing Sleeve Zigzag</a>
                            <div class="rating-box">
                                <div class="star"><i class="fa fa-star"></i></div>
                                <div class="star"><i class="fa fa-star"></i></div>
                                <div class="star"><i class="fa fa-star"></i></div>
                                <div class="star"><i class="fa fa-star"></i></div>
                                <div class="star"><i class="fa fa-star"></i></div>
                                <div class="reviews-number">25 reviews</div>
                            </div>
                            <div class="article-container style-1">
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, eiusmod tempor incididunt ut labore et dolore magna aliqua. Lorem ipsum dolor sit amet, consectetur adipiscing elit, eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                            </div>
                            <div class="price">
                                <div class="prev">$199,99</div>
                                <div class="current">$119,99</div>
                            </div>
                            <div class="list-buttons">
                                <a class="button style-10">Add to cart</a>
                                <a class="button style-11"><i class="fa fa-heart"></i> Add to Wishlist</a>
                            </div>
                        </div>
                        <div class="clear"></div>
                    </div>

                </div>
                <div class="page-selector">
                    <div class="description">Showing: 1-3 of 16</div>
                    <div class="pages-box">
                        <a href="shop.html#" class="square-button active">1</a>
                        <a href="shop.html#" class="square-button">2</a>
                        <a href="shop.html#" class="square-button">3</a>
                        <div class="divider">...</div>
                        <a href="shop.html#" class="square-button"><i class="fa fa-angle-right"></i></a>
                    </div>
                    <div class="clear"></div>
                </div>
            </div>
        </div>
    </div>
    <div>
        <div class="tabs-entry">
            <div class="products-swiper">
                {{ sonata_block_render({type: 'frontend.block.factories'}, {newest: true}) }}
            </div>
        </div>

        <div class="tabs-entry">
            <div class="products-swiper">
                {{ sonata_block_render({type: 'frontend.block.products'}) }}
            </div>
        </div>
    </div>

{% endblock %}    