<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />

    {% block head_meta_common %}
        <meta http-equiv="content-type" content="text/html; charset=utf-8" />
        <meta name="format-detection" content="telephone=no" />
        <meta name="apple-mobile-web-app-capable" content="yes" />
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no, minimal-ui"/>
    {% endblock %}

    {% block stylesheets %}
        {% stylesheets output='/css/*.min.css'
            '@FrontendBundle/Resources/public/css/bootstrap.min.css'
            '@FrontendBundle/Resources/public/css/idangerous.swiper.css'
            '@FrontendBundle/Resources/public/css/font-awesome.min.css'
            '@FrontendBundle/Resources/public/css/font-raleway.css'
            '@FrontendBundle/Resources/public/css/style.css'
        %}
            <link type="text/css" href="{{ asset_url }}" rel="stylesheet" />
        {% endstylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% javascripts output='/js/*.min.js'
            '@FrontendBundle/Resources/public/js/jquery-2.1.3.min.js'
            '@FrontendBundle/Resources/public/js/jquery-ui.min.js'
            '@FrontendBundle/Resources/public/js/jquery.mousewheel.js'
            '@FrontendBundle/Resources/public/js/jquery.jscrollpane.min.js'
            '@FrontendBundle/Resources/public/js/idangerous.swiper.min.js'
            '@FrontendBundle/Resources/public/js/bootstrap.min.js'
            '@FrontendBundle/Resources/public/js/jquery.jeditable.js'
            '@FrontendBundle/Resources/public/js/global.js'
        %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
        {% endjavascripts %}
    {% endblock %}

    {#
    @todo: The file css/ie9.css was not found
    <!--[if IE 9]>
        <link href="css/ie9.css" rel="stylesheet" type="text/css" />
    <![endif]-->
    #}

    <link rel="shortcut icon" href="{{ asset('bundles/frontend/img/favicon-6.ico') }}" />

    <title>{% block title %}{{ 'frontend.title.index'|trans }}{% endblock %}</title>

    <meta name="description" content="{% block meta_description %}{% endblock %}" />
    <meta name="keywords" content="{% block meta_keywords %}{% endblock %}" />
</head>

<body{% block body_attributes %} class="{{ body_classes|default(['style-16'])|join(' ') }}"{% endblock %}>
    {% include 'FrontendBundle:Common:page_loader.html.twig' %}

    <div id="content-block">
        <div class="content-center fixed-header-margin">
            <div class="header-wrapper style-16">
                {% block header_container %}
                    <header class="type-4">
                        {% block header_top_container %}
                            <div class="header-top">
                                {% block header_top %}
                                    {% include 'FrontendBundle:Common/Header/Default:top.html.twig' %}
                                {% endblock %}
                            </div>
                        {% endblock %}

                        {% block header_middle_container %}
                            <div class="header-middle">
                                {% block header_middle %}
                                    {% include 'FrontendBundle:Common/Header/Default:middle.html.twig' %}
                                {% endblock %}
                            </div>
                        {% endblock %}

                        {% block header_flashes_container %}
                            <div class="header-product">
                                {% block header_flashes %}
                                    {% include 'FrontendBundle:Common/Header/Default:flashes.html.twig' %}
                                {% endblock %}
                            </div>
                        {% endblock %}

                        <div class="close-header-layer"></div>

                        {% block header_navigation_container %}
                            <div class="navigation disable-animation">
                                {% block header_navigation %}
                                    {% include 'FrontendBundle:Common/Header/Default:navigation.html.twig' %}
                                {% endblock %}
                            </div>
                        {% endblock %}
                    </header>
                {% endblock %}

                <div class="clear"></div>
            </div>

            <div class="content-push">
                {% set breadcumb_content = block('breadcrumb') %}
                {% if breadcumb_content|trim|length > 0 %}
                    <div class="breadcrumb-box">{{ breadcumb_content|raw }}</div>
                {% endif %}

                {% block content %}{% endblock %}

                {% block footer_container %}
                    <div class="footer-wrapper style-10">
                        <footer class="type-1">
                            {% block footer %}
                                {% include 'FrontendBundle:Common/Footer:default.html.twig' %}
                            {% endblock %}
                        </footer>
                    </div>
                {% endblock %}
            </div>
        </div>
    </div>
{% block footer_javascripts %}
{% endblock %}
</body>
</html>