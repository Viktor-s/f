{% extends 'FrontendBundle:Specification:base.html.twig' %}
{% from 'FrontendBundle:Macros:misc.html.twig' import pagination %}

{% block title %}{{ 'frontend.title.list'|trans }} :: {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}
    <span class="active">{{ 'frontend.title.list'|trans }}</span>
{% endblock %}

{% block content %}
    <div class="row mv-actions">
        <div class="col-sm-2 col-xs-4 col-lg-1">
            <label for="sorting">
                <select name="sorting" class="form-control">
                {% for key, value in sorting %}
                    <option value="{{ key }}" {% if value.state %}selected{% endif %}>{{ value.name }}</option>
                {% endfor %}
                </select>
            </label>
        </div>
        <div class="col-sm-2 col-xs-4 col-lg-1">
            <a href="{{ path('specification_create') }}" class="btn btn-success">{{ 'frontend.create'|trans }}</a>
        </div>
        <div class="col-sm-6 col-xs-4 col-lg-4 col-sm-push-2 col-lg-push-6">
            {{ pagination(specifications) }}
        </div>
    </div>
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-condensed">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>{{ 'frontend.manager'|trans }}</th>
                    <th>{{ 'frontend.name'|trans }}</th>
                    <th>{{ 'frontend.buyer'|trans }}</th>
                    <th>{{ 'frontend.last_modified'|trans }}</th>
                    <th>{{ 'frontend.total_price'|trans }}</th>
                    <th>{{ 'frontend.actions'|trans }}</th>
                </tr>
            </thead>
            <tbody>
            {% for specification in specifications %}
                <tr>
                    <td>{{ specification.id }}</td>
                    <td>{{ specification.creator.user.fullName }}</td>
                    <td>{{ specification.name }}</td>
                    <td>{{ specification.buyer }}</td>
                    <td>{{ specification.updatedAt.format('Y/m/d H:i') }}</td>
                    <td>{{ specification|specification_total_price|money }}</td>
                    <td>
                    {% if specification.finishedAt is empty %}
                        {% if is_granted('EDIT', specification) %}
                            <a class="btn btn-success btn-xs" href="{{ path('specification_edit', {specification: specification.id}) }}">{{ 'frontend.edit'|trans }}</a>
                        {% endif %}

                        {% if is_granted('REMOVE', specification) %}
                            <a class="btn btn-danger btn-xs" data-remove data-message="Are you sure remove specification?" href="{{ path('specification_remove', {specification: specification.id}) }}">{{ 'frontend.remove'|trans }}</a>
                        {% endif %}

                        {% if is_granted('FINISH', specification) and specification.items|length > 0 %}
                            <a class="btn btn-primary btn-xs" data-remove data-message="Are you sure  you want to finish (close) specification?" href="{{ path('specification_finish', {specification: specification.id}) }}">{{ 'frontend.finish'|trans }}</a>
                        {% endif %}

                        {% if is_granted('EXPORT', specification) and specification.items|length > 0 %}
                            <a class="btn btn-success btn-xs" href="{{ path('specification_export_preview', {specification: specification.id}) }}">{{ 'frontend.export'|trans }}</a>
                        {% endif %}
                    {% else %}
                        {{ 'frontend.finished'|trans }}
                    {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">
                        {{ 'frontend.specfications_not_found'|trans }}
                        {% if is_granted('SPECIFICATION_CREATE') %}
                            <a href="{{ path('specification_create') }}">{{ 'frontend.create'|trans }}</a>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="row mv-actions">
        <div class="col-xs-4 col-sm-6 col-lg-4 col-xs-push-8 col-sm-push-6 col-lg-push-8">
            {{ pagination(specifications) }}
        </div>
    </div>
{% endblock %}

{% block footer_javascripts %}
    {{ parent() }}
    <script type="text/javascript">
        $(document).ready(function () {
            $('select[name="sorting"]').on('change', function (e) {
                var query = {[this.name]: $(this).val()};
            window.location = window.location.origin + window.location.pathname + '?' + $.param(query)
            });
        })
    </script>
{% endblock %}
