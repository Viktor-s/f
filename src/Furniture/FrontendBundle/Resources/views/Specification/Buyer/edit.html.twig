{% extends 'FrontendBundle:Specification/Buyer:base.html.twig' %}

{% block title %}{{ ('frontend.title.' ~ (buyer.id ? 'edit' : 'create'))|trans }} :: {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}

    <a href="#">{{ ('frontend.title.' ~ (buyer.id ? 'edit' : 'create'))|trans }}</a>
{% endblock %}

{% block content %}
<div class="row">
    <div class="col-sm-6">
        {{ form_start(form) }}
        {{ form_widget(form) }}

        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9 text-right">
                <button class="btn btn-success" type="submit">{{ 'frontend.save'|trans }}</button>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}

{% block footer_javascripts %}
    {{ parent() }}
    <script type="text/javascript">
                function initAutocomplete() {
                    $('.google-address-autocomplete').each(function(){
                        autocomplete = new google.maps.places.Autocomplete(
                            (this),
                            {types: ['geocode']}
                        );
                    });
                }
    </script>
    <script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key={{ google_api_maps_key }}&signed_in=true&libraries=places&callback=initAutocomplete" >
    </script>
{% endblock %}