{% spaceless %}
    <div class="logo-wrapper">
        <a id="logo" href="/">AgentA</a>
    </div>

    {# @todo: why the middle entry? #}
    <div class="middle-entry">
        <a href="#" class="icon-entry">
            <span class="image">
                <i class="fa fa-car"></i>
            </span>
            <span class="text">
                <b>Free Shipping</b> <br> on order over $200
            </span>
        </a>

        <a href="#" class="icon-entry">
            <span class="image">
                <i class="fa fa-comments-o"></i>
            </span>
            <span class="text">
                <b>Support Center</b> <br> Working everyday 24/7
            </span>
        </a>

        <a href="#" class="icon-entry">
            <span class="image">
                <i class="fa fa-usd"></i>
            </span>
            <span class="text">
                <b>Summer Sale</b> <br> Even 50% cheaper!
            </span>
        </a>
    </div>

    <div class="right-entries product-header-content">
        <div class="line-entry">
                <a class="header-functionality-entry" href="{{ path('user_profile') }}">
                    <i class="fa fa-user"></i><span>{{ 'frontend.button.user_profile'|trans }}</span>
                </a>
            {% if app.user and app.user.isRetailer() and app.user.retailerUserProfile.isRetailerAdmin() %}
                <a class="header-functionality-entry" href="{{ path('retailer_profile') }}">
                    <i class="fa fa-cog"></i><span>{{ 'frontend.button.settings'|trans }}</span>
                </a>
            {% elseif is_granted('ROLE_FACTORY_ADMIN') or is_granted('ROLE_FACTORY_USER') %}
                <a class="header-functionality-entry" href="{{ path('factory_profile') }}">
                    <i class="fa fa-cog"></i><span>{{ 'frontend.button.settings'|trans }}</span>
                </a>
            {% endif %}

            <a class="header-functionality-entry" href="{{ path('security_logout') }}">
                <span>{{ 'frontend.button.logout'|trans }}</span>
            </a>
        </div>
