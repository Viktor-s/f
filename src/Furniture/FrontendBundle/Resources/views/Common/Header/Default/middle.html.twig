        <div class="middle-line"></div>
        <div class="line-entry">
            <span class="header-functionality-entry" >{{ app.user.username }}</span>
            {% if is_granted('ROLE_FACTORY_ADMIN') or is_granted('ROLE_FACTORY_USER') %}
                <span class="header-functionality-entry" >Factory: {{ app.user.factory ? app.user.factory.name : '' }}</span>    
            {% endif %}
        </div>
        #}
    </div>
{% endspaceless %}