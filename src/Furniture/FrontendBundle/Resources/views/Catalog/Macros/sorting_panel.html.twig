{# empty Twig template #}
{% macro sorting_panel(position, pagination) %}
    {% spaceless %}
        <div class="row {{ position }}-content-filter">
            <div class="col-md-6 col-sm-6 col-lg-4 col-md-offset-4 col-sm-offset-3 col-lg-offset-5">
                <div class="row text-center">
                    <ul class="shop-grid-controls">
                        <li>
                            <div class="form-group">
                                <label for="sortind" class="control-label">{{ 'frontend.sort_by'|trans }}
                                    <select name="sorting">
                                        <option>Position</option>
                                        <option>Price</option>
                                        <option>Category</option>
                                        <option>Rating</option>
                                        <option>Color</option>
                                    </select>
                                </label>
                            </div>
                        </li>
                        <li>
                            <div class="sort-block">
                                <div class="sort-button">
                                    <i class="fa fa-arrow-down"></i>
                                    <i class="fa fa-arrow-up"></i>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="entry">
                                <div class="view-button active grid"><i class="fa fa-th"></i></div>
                                <div class="view-button list"><i class="fa fa-list"></i></div>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="col-md-2 col-sm-3 col-lg-3 text-right">
                {{ pagination }}
            </div>
        </div>
    {% endspaceless %}
{% endmacro %}