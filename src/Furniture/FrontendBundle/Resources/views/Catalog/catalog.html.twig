{% extends 'FrontendBundle::layout.html.twig' %}

{% block title %} {{ 'frontend.spaces'|trans }} :: {{ parent() }}{% endblock %}

{% block breadcrumb %}
    <a href="{{ path('homepage') }}">{{ 'frontend.title.homepage'| trans }}</a>
    <span class="active">{{ 'frontend.title.spaces'|trans }}</span>
{% endblock %}

{% block content %}
    <div class="row">
        <div class="mozaic-banners-wrapper type-2">

            {% for space in spaces %}
                <div class="banner-column col-sm-4">
                    <a
                            href="{{ path('products', {space: [space.id]}) }}"
                            {% if 0 %}
                                style="background-image: url({{ some.path|imagine_filter('s425x200') }}); background-size: cover;" class="mozaic-banner-entry type-3"
                            {% else %}
                                style="background-image: url(/img/bags-3.jpg); background-size: cover;" class="mozaic-banner-entry type-3"
                            {% endif %}
                    >
                        <span class="mozaic-banner-content">
                            <span class="title">{{ space.translate.name }}</span>
                            <span class="view">view space</span>
                        </span>
                    </a>
                </div>
            {% endfor %}
            <div class="clear"></div>
        </div>
    </div>
{% endblock %}