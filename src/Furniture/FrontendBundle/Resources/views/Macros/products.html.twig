{% macro filter_panel(list, checked_list, name, title, show = 5) %}
    {% spaceless %}
        {% if list is not empty %}
            <div class="panel">
                <a href="#{{ name }}-filter" class="filter-category collapsed" data-toggle="collapse" aria-expanded="true" aria-controls="{{ name }}-filter">{{ title }}</a>
                <ul class="collapse{% if checked_list is not empty%} in{% endif %}" id="{{ name }}-filter">
                    {% for item in list %}
                        <li>
                            <input id="checkbox-{{ name }}-{{ item.id }}" {% if checked_list is iterable and item.id in checked_list %} checked{% endif %} type="checkbox" value="{{ item.id }}" live-form name="{{ name }}[]" />
                            <label for="checkbox-{{ name }}-{{ item.id }}" class="checkbox-name">{{ item.translate.name is not empty ? item.translate.name : item.name}}</label>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
    {% endspaceless %}
{% endmacro %}

{% macro sorting_panel(position, pagination) %}
    {% spaceless %}
        <div class="row {{ position }}-content-filter">
            <div class="col-md-6 col-sm-6 col-lg-4 col-md-offset-4 col-sm-offset-3 col-lg-offset-5">
                <div class="row text-center">
                    <ul class="shop-grid-controls">
                        <li>
                            <div class="form-group">
                                <label for="sortind" class="control-label">{{ 'frontend.sort_by'|trans }}
                                    <select name="sorting">
                                        <option>Position</option>
                                        <option>Price</option>
                                        <option>Category</option>
                                        <option>Rating</option>
                                        <option>Color</option>
                                    </select>
                                </label>
                            </div>
                        </li>
                        <li>
                            <div class="sort-block">
                                <div class="sort-button">
                                    <i class="fa fa-arrow-down"></i>
                                    <i class="fa fa-arrow-up"></i>
                                </div>
                            </div>
                        </li>
                        <li>
                            <div class="entry">
                                <div class="view-button active grid"><i class="fa fa-th"></i></div>
                                <div class="view-button list"><i class="fa fa-list"></i></div>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
            <div class="col-md-2 col-sm-3 col-lg-3 text-right">
                {{ pagination }}
            </div>
        </div>
    {% endspaceless %}
{% endmacro %}