{% extends 'FrontendBundle:Profile/User:base.html.twig' %}

{% block title %}{{ 'frontend.edit'|trans }} :: {{ parent() }}{% endblock %}

{% block breadcrumb %}
    {{ parent() }}

    <a href="#">{{ 'frontend.password'|trans }}</a>
{% endblock %}

{% block page_content %}
    <div class="page-header">
        <h1>{{ 'frontend.title.password_change'|trans }}</h1>
    </div>
    {{ form_start(form, {'attr': {'class': 'col-sm-9'}}) }}
    {{ form_widget(form) }}

    <div class="form-group">
        <div class="col-sm-offset-3 col-sm-9 text-right">
            <button type="submit" class="btn btn-success">{{ 'frontend.save'|trans }}</button>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}