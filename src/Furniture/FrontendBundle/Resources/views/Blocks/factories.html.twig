<div class="swiper-container" data-autoplay="0" data-loop="0" data-speed="500" data-center="0" data-slides-per-view="responsive" data-xs-slides="2" data-int-slides="2" data-sm-slides="3" data-md-slides="4" data-lg-slides="5" data-add-slides="5">
    <div class="swiper-wrapper">
        {% for factory in factories %}
            <div class="swiper-slide">
                <div class="paddings-container">
                    <div class="product-slide-entry">
                        <a class="product-image hover-class-1" href="#">
                            {% if factory.hasImages() %}
                            <img src="{{ factory.primaryImage.path|imagine_filter('s201x123') }}" alt="{{ factory.translate.name }}" title="{{ factory.translate.name }}" />
                            {% else %}
                            <img src="{{ 'http://placehold.it/201x203' }}" alt="{{ factory.translate.name }}" title="{{ factory.translate.name }}" />
                            {% endif %}
                        </a>

                        <a class="subtitle" href="#">{{ factory.translate.name }}</a>
                        <div class="date">{{ 'frontend.factory.posted'|trans({':created': factory.createdAt.format('d M Y')}) }}</div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

    <div class="pagination"></div>
</div>