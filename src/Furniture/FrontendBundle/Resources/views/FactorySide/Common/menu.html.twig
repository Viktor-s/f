{% block root %}
{% spaceless %}
<div class="portfolio-navigation">
    <div class="links-drop-down">
        <div class="title">Select</div>
        <div class="list">
        {% for child in item.children if child.displayed %}
            <a {% if child.isCurrent() %} class="active" {% endif %} href="{{ child.uri }}">
                {{ child.label }}
            </a>
        {% endfor %}
        </div>
    </div>
</div>
{% endspaceless %}
{% endblock %}