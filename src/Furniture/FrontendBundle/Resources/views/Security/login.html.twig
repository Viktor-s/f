<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />

        {% block head_meta_common %}
            <meta http-equiv="content-type" content="text/html; charset=utf-8" />
            <meta name="format-detection" content="telephone=no" />
            <meta name="apple-mobile-web-app-capable" content="yes" />
            <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no, minimal-ui"/>
        {% endblock %}

        {% block stylesheets %}
            {% stylesheets output='/css/*.min.css'
            '@FrontendBundle/Resources/public/css/bootstrap.min.css'
            '@FrontendBundle/Resources/public/css/idangerous.swiper.css'
            '@FrontendBundle/Resources/public/css/font-awesome.min.css'
            '@FrontendBundle/Resources/public/css/font-raleway.css'
            '@FrontendBundle/Resources/public/css/style.css'
            %}
            <link type="text/css" href="{{ asset_url }}" rel="stylesheet" />
            {% endstylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% javascripts output='/js/*.min.js'
            '@FrontendBundle/Resources/public/js/jquery-2.1.3.min.js'
            '@FrontendBundle/Resources/public/js/jquery-ui.min.js'
            '@FrontendBundle/Resources/public/js/jquery.mousewheel.js'
            '@FrontendBundle/Resources/public/js/jquery.jscrollpane.min.js'
            '@FrontendBundle/Resources/public/js/idangerous.swiper.min.js'
            '@FrontendBundle/Resources/public/js/bootstrap.min.js'
            '@FrontendBundle/Resources/public/js/jquery.jeditable.js'
            '@FrontendBundle/Resources/public/js/global.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
        {% endblock %}

        {#
        @todo: The file css/ie9.css was not found
        <!--[if IE 9]>
            <link href="css/ie9.css" rel="stylesheet" type="text/css" />
        <![endif]-->
        #}

        <link rel="shortcut icon" href="{{ asset('bundles/frontend/img/favicon-6.ico') }}" />

        <title>{% block title %}{{ 'frontend.title.index'|trans }}{% endblock %}</title>

        <meta name="description" content="" />
        <meta name="keywords" content="" />
        <style>
            .login-box{
                margin-top:20%;
                min-height:330p
            }
        </style>
    </head>
    <body>
        {% include 'FrontendBundle:Common:page_loader.html.twig' %}

        <div id="content-block">
            <div class="content-center fixed-header-margin">
                <div class="content-push">
                    <div class="information-blocks">
                        <div class="row">
                            <div class="col-sm-6 information-entry">
                                <div class="login-box">
                                    <div class="article-container style-1">
                                        <h3>Registered Customers</h3>
                                        {% if error %}
                                            <p>{{ error.messageKey|trans(error.messageData, 'security') }}</p>
                                        {% endif %}
                                    </div>
                                    <form action="{{ path("security_login_check") }}" method="post">
                                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

                                        <label for="username">{{ 'frontend.login.username'|trans }}</label>
                                        <input class="simple-field" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />

                                        <label for="password">{{ 'frontend.login.password'|trans }}</label>
                                        <input class="simple-field" type="password" id="password" name="_password" required="required" />

                                        <label class="checkbox-entry">
                                            <input type="checkbox" id="remember_me" name="_remember_me" value="on">
                                            <span class="check"></span> 
                                            {{ 'frontend.login.remember_me'|trans }}
                                        </label>

                                        <input type="submit" class="button style-12" id="_submit" name="_submit" value="{{ 'frontend.login.submit'|trans }}" />
                                    </form>
                                </div>
                            </div>
                            <div class="col-sm-6 information-entry">
                                <div class="login-box">
                                    <div class="article-container style-1">
                                        <h3>New Customers</h3>
                                        <p>By creating an account with our service .... By creating an account with our service .... By creating an account with our service .... By creating an account with our service .... .</p>
                                    </div>
                                    <a class="button style-12">Register Account</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </body>
</html>
