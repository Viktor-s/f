{% extends 'FrontendBundle:Security:layout.html.twig' %}

{% form_theme form 'FrontendBundle:Security:form.html.twig' %}

{% block content %}
    <div class="col-md-6 information-entry col-md-offset-3">
        <div class="login-box">
            <div class="article-container style-1 text-center"><h3>{{ 'frontend.reset_password'|trans }}</h3></div>

            {% if reason == 'nrp' %}
                {# Need reset password #}
                <div class="alert alert-warning">{{ 'frontend.need_reset_password'|trans }}</div>
            {% endif %}

            {% for type in ['success', 'error'] %}
                {% for flash in app.session.flashbag.get(type) %}
                    <div class="alert alert-{{ type == 'error' ? 'danger' : type }}">
                        <a class="close" data-dismiss="alert" href="#">Ã—</a>
                        {{ flash }}
                    </div>
                {% endfor %}
            {% endfor %}

            {% if form %}
                <p>{{ 'frontend.please_enter_your_email'|trans }}</p>
                <p class="lead"></p>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            {% endif %}
        </div>
    </div>
{% endblock %}
