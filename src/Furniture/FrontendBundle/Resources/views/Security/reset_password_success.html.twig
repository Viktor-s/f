{% extends 'FrontendBundle:Security:layout.html.twig' %}

{% block content %}
    <div class="col-md-6 information-entry col-md-offset-3">
        <div class="login-box">
            <div class="article-container style-1 text-center"><h3>{{ 'frontend.reset_password'|trans }}</h3></div>
            <p class="text-center">{{ 'frontend.reset_password_successfully'|trans }}</p>

            <p class="text-center" style="margin-top: 50px;">
                <a href="{{ path('homepage', {_locale: 'en'}) }}"
                   class="button style-12">{{ 'frontend.goto_home'|trans }}</a>
            </p>
        </div>
    </div>
{% endblock %}