{% extends 'FrontendBundle:Security:layout.html.twig' %}

{% form_theme form 'FrontendBundle:Security:form.html.twig' %}

{% block content %}
    <div class="col-md-6 information-entry col-md-offset-3">
        <div class="login-box">
            <div class="article-container style-1 text-center"><h3>{{ 'frontend.forgot_password'|trans }}</h3></div>

            {% if error %}
                <div class="alert alert-danger">{{ error }}</div>
            {% endif %}

            {% if form %}
                <p>{{ 'frontend.please_enter_your_email'|trans }}</p>
                <p class="lead"></p>
                {{ form_start(form) }}
                {{ form_widget(form) }}
                {{ form_end(form) }}
            {% endif %}
        </div>
    </div>
{% endblock %}